<nav id="primaryNavigation" role="navigation" class="nav-main" data-state="off" data-container="mainMenu">
  <div  class="nav-main__header">
    <span id="menuButtonClose" class="nav-main__close" data-state="off">
    {% include 'icon-close' %}
  </span>
  </div>

  <ul class="nav-main__list">
    {% for link in linklists[section.settings.main_linklist].links %}
      {%- assign child_list_handle = link.title | handleize -%}
      {%- assign mega = '' -%}
      {%- capture  megaLinks -%}
      {%- for list in linklists -%}
        {%- if list.handle contains child_list_handle -%}
         {{ list.handle }},
        {%- endif -%}
        {%- endfor -%}
      {%- endcapture -%}
      {%- assign megaLinks = megaLinks | split: ','  | size -%}
      <!-- megaLinks {{megaLinks | size }} -->
      {% comment %}
      Set megaLinks to 0 the remove megamenu dropdowns
      TODO : Add setting disable_menu_dropdowns
      {% endcomment %}
      {%- assign megaLinks = 0 -%}
      {% if megaLinks  > 0 %}
        <!-- inc megaLinks -->
        {% include "nav-main-mega" %}
        {%  elsif menus[child_list_handle].links != blank %}
        <!-- inc drop -->
        {% include "nav-main-dropdown" %}
      {% else %}
        <!-- inc  -->
        {% include "nav-main-single" %}
      {% endif %}
    {% endfor %}
  </ul>
</nav>
