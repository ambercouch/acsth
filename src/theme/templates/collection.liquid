{% assign hideTitle = collection.metafields.global.hide_title %}
{% assign collectionLogo = images[collection.metafields.global.logo] %}
{% assign featureImage = images[collection.metafields.global.feature_image_desktop] %}
{% assign collectionSeoTitle = collection.metafields.global.seo_title %}
{% assign collectionSubHeading = collection.metafields.global.sub_heading %}
{% if collectionSeoTitle != blank %}
  {% assign collectionTitle = collectionSeoTitle %}
{% else %}
  {% assign collectionTitle = collection.title %}
{% endif %}

{% assign collectionTitleLower = collection.title | downcase %}
{% if collectionTitleLower contains 'single' %}
  {% assign collectionType = "(Single)" %}
  {% elsif collectionTitleLower contains 'pair' %}
  {% assign collectionType = "(Pair)" %}
{% else %}
  {% assign collectionType = "" %}
{% endif %}



{% if collection.metafields.global.collection_header_logo %}
{% assign collectionHeaderLogo = images[collection.metafields.global.collection_header_logo] %}
{% endif %}
{% paginate collection.products by 12 %}
  <div class="l-main__page--collection">

    <div class="l-page--collection">
      <div class="l-page__header--collection">
        <header class="c-header--collection">
          <h1 class="c-header__heading--collection">
           <span class="c-header__title">{{ collectionTitle }}</span>
            {% if collectionType != '' %}
            <span class="c-header__type">{{ collectionType }}</span>
            {% endif %}
          </h1>
          {% if collectionSubHeading != blank %}
          <h4 class="c-header__sub-heading">
            {{ collectionSubHeading }}
          </h4>
          {% endif %}
        </header>
                {% if collection.image.src %}
                  <div class="l-page__feature-image--collection">
                    {% include 'responsive-image' with
                      image: collection.image,
                      max_width: 1440,
                      max_height: 1000
                    %}
                  </div>
                {% else %}
                  <!-- no collection image -->
                {% endif %}
        {% if featureImage %}
                <div class="l-page__feature-image--collection-desktop">
                  {% include 'responsive-image' with
                    image: featureImage,
                    max_width: 1200,
                    max_height: 1000
                  %}
                </div>
        {% endif %}
        <div class="l-page__tag-list">
          {% include 'ac-tag-list' %}
        </div>
      </div>
      <div class="l-page__collection-intro">
        {% if collection.description != blank %}
          <div class="l-page__content--collection">
            <div class="rte">
              {{ collection.description }}
            </div>
          </div>
        {% endif %}
      </div>


  <div class="l-page__product-list">
    <div class="l-product-list">

      <div class="l-product-list__list">
    {% for product in collection.products %}

      <div class="l-product-list__item is-product-id-{{ product.id }} u-bgc-{{ product.metafields.global.background }}">
        <div class="l-product-list__item-thumb">
          {% include 'acstk-item-thumb' %}
        </div>
      </div>


    {% endfor %}
      </div>
    </div>
  </div>

  {% if paginate.pages > 1 %}
    {% include 'pagination' %}
  {% endif %}
    </div>
  </div>
{% endpaginate %}
