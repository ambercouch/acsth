<!-- nav-main-dropdown.liquid -->
{% comment %}
<li class="nav-main__item nav-main__item--has-submenu{% if link.active %}  is-current{% endif %}">
  <a href="{{ link.url }}" class="nav-main__link">
    {{ link.title }}
    {% include 'icon-arrow-down' %}
  </a>
  <ul class="nav-main__submenu">
    {% for childlink in menus[child_list_handle].links %}
      <li class="nav-main__item--sub {% if childlink.active %}nav-main__item--active{% endif %} ">
        <a href="{{ childlink.url }}" class="nav-main__link--sub">{{ childlink.title | escape }}</a>
      </li>
    {% endfor %}
  </ul>
</li>
{% endcomment %}

{% assign menus = settings.mega_menu_list | split: ',' %}
{% assign range = 'style,brand' | split: ',' %}
<!-- nav-main-mega.liquid -->
<li class="nav-main__item nav-main__item--has-submenu{% if link.active %}  is-current{% endif %}">

  <a href="{{ link.url }}" class="nav-main__link" data-state="off" data-control="{{ link.handle }}">
    <span class="nav-main__link-label">{{ link.title }}</span>
    <!-- <span class="nav-main__arrow"> {% include 'icon-arrow-down' %}</span> -->
  </a>

  <div class="nav-main__mega" data-state="off" data-container="{{ link.handle }}">
    {% include 'mega-dropdown' %}
  </div>

</li>

